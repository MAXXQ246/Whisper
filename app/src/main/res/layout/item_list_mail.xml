<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:background="@color/white">
    <!--listview里的每一个Item的显示-->
    <RelativeLayout
        android:id="@+id/letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        <!--你是谁和前往按钮-->
        <TextView
            android:id="@+id/letter_who"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="你是谁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--显示在"你是谁的右面使用的margin_left来实现？？"-->
        <ImageView
            android:id="@+id/letter_go"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginLeft="270dp"
            android:src="@drawable/go"/>
    </RelativeLayout>
    <!--用于显示内容-->
    <TextView
        android:id="@+id/letter_text"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <!--来自哪里和日期-->
        <TextView
            android:id="@+id/letter_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="From XXXX"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/letter_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:text="2020/2/3"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>
